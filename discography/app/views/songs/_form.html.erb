<%= form_for([@album.artist, @album, @song]) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label(:name) %>
    <%= f.text_field(:name) %>
  </p>

  <p>
    <%= f.label(:duration) %>
    <%= f.text_field(:duration) %>
  </p>

  <p class="actions">
    <%= f.submit %>
  </p>
<% end %>
